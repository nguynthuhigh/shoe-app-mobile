<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_checkout"
    android:orientation="vertical"
    tools:context=".CheckoutActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:srcCompat="@drawable/rectangle_bottom_radius" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout

                    android:layout_width="358dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">


                    <TextView
                        android:id="@+id/txtCheckout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/alata_regular"
                        android:gravity="center_horizontal"
                        android:text="Checkout"
                        android:textColor="@color/black"
                        android:textSize="30sp" />

                    <androidx.cardview.widget.CardView

                        android:id="@+id/bg_checkout"
                        android:layout_width="358dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtCheckout"
                        android:layout_marginTop="30dp"
                        android:foregroundGravity="center"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="0dp"
                        app:contentPaddingBottom="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/bg_checkout"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:paddingStart="15dp"
                                android:paddingTop="15dp"
                                android:src="@drawable/ic_brand_nike" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/alata_regular"
                                android:text="Details"
                                android:textSize="20dp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="15dp"
                                android:paddingEnd="15dp">


                                <TextView
                                    android:id="@+id/customer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/alata_regular"
                                    android:text="Customer"
                                    android:textColor="@color/darkGrey"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/alata_regular"
                                    android:text="PhongSongSong"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/customer"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/alata_regular"
                                    android:text="Address"
                                    android:textColor="@color/darkGrey"
                                    android:textSize="12sp" />

                                <EditText
                                    android:id="@+id/edtAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/customer"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/alata_regular"
                                    android:hint="Input your address"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                            </RelativeLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                app:srcCompat="@drawable/line" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:fontFamily="@font/alata_regular"
                                android:text="Products List"
                                android:textSize="18dp" />


                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </androidx.recyclerview.widget.RecyclerView>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:paddingStart="15dp"
                                android:paddingEnd="15dp">

                                <TextView
                                    android:id="@+id/quantity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/alata_regular"
                                    android:text="Quantity"
                                    android:textColor="@color/darkGrey"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/alata_regular"
                                    android:text="4"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/discount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/quantity"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/alata_regular"
                                    android:text="Discount"
                                    android:textColor="@color/darkGrey"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/quantity"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/alata_regular"
                                    android:text="0%"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/discount"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/alata_regular"
                                    android:text="Total"
                                    android:textColor="@color/darkGrey"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/discount"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/alata_regular"
                                    android:text="14,000,000Ä‘"
                                    android:textColor="@color/black" />

                            </RelativeLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                app:srcCompat="@drawable/line_bill" />

                            <Button
                                android:id="@+id/btnToCheckout"
                                android:layout_width="300dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@drawable/btn_default"
                                android:text="Payment"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>